<h1>Listing accommodations</h1>

<table>
  <tr>
    <th>Attendance</th>
    <th>Accommodation type</th>
    <th>Count</th>
    <th>Remarks</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @accommodations.each do |accommodation| %>
  <tr>
    <td><%= accommodation.attendance_id %></td>
    <td><%= accommodation.accommodation_type_id %></td>
    <td><%= accommodation.count %></td>
    <td><%= accommodation.remarks %></td>
    <td><%= link_to 'Show', accommodation %></td>
    <td><%= link_to 'Edit', edit_accommodation_path(accommodation) %></td>
    <td><%= link_to 'Destroy', accommodation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

