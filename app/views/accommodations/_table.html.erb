<table class="AccommodationsTable FrontendTable">
  <tr>
    <th>Zimmertyp</th>
    <th>Anzahl</th>
    <th>Bemerkungen/Sonderw&uuml;nsche</th>
    <th colspan="2"></th>
  </tr>

<% accommodations.each do |accommodation| %>
  <tr>
    <td><%= accommodation.accommodation_type.name %></td>
    <td><%= accommodation.count %></td>
    <td><%= accommodation.remarks %></td>
    <td colspan="2"><% if @attendance.event_registration_open? -%><%= link_to t('edit'), edit_accommodation_path(accommodation) %>
    <%= link_to t('delete'), accommodation, :confirm => t('are_you_sure'), :method => :delete %><% end -%></td>
  </tr>
<% end %>
</table>
