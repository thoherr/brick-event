<table class="AttendeesTable FrontendTable">
    <tr>
      <th>Bestätigt</th>
      <th></th>
      <th>Name</th>
      <th>LUG</th>
      <th>Email</th>
      <th>Nickname</th>
      <th>AFOLS-Event</th>
      <th>Bemerkungen</th>
      <th colspan="2"></th>
    </tr>

<% attendees.each do |attendee| %>
  <tr>
    <td><%= to_j_n(attendee.is_approved?) %></td>
      <td><%= attendee.attendee_type %></td>
      <td><%= attendee.name %></td>
      <td><%= attendee.lug %></td>
      <td><%= attendee.email %></td>
      <td><%= attendee.nickname %></td>
      <td><%= to_j_n(attendee.afols_event) %></td>
      <td><%= attendee.remarks %></td>
        <!-- TODO: Sollen hier wirklich links sein?? -->
      <td colspan="2"><% if @registration_open -%><%= link_to 'Ändern', edit_attendee_path(attendee) %>
      <%= link_to 'Löschen', attendee, :confirm => 'Bist Du sicher?', :method => :delete %><% end -%></td>
  </tr>
<% end %>
</table>
