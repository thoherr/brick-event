<%- if controller_name != 'sessions' %>
  <div class="OverviewLink"><%= link_to "Anmelden", new_session_path(resource_name) %></div>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="OverviewLink"><%= link_to "Neu registrieren", new_registration_path(resource_name) %></div>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <div class="OverviewLink"><%= link_to "Passwort vergessen?", new_password_path(resource_name) %></div>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="OverviewLink"><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %></div>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="OverviewLink"><%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %></div>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div class="OverviewLink"><%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %></div>
  <% end -%>
<% end -%>