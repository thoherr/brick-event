<div class="InputForm">
  <%= form_for(@user) do |f| %>
      <div class="field">
        <%= f.label :name, t(:label_name) %><br/>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :phone, t(:label_phone) %><br/>
        <%= f.text_field :phone %>
      </div>
      <div class="field">
        <%= f.label :lug, t(:label_lug) %><br/>
        <%= f.text_field :lug %>
      </div>
      <div class="field">
        <%= f.label :nickname, t(:label_nickname) %><br/>
        <%= f.text_field :nickname %>
      </div>
      <div class="field">
        <%= f.label :address, t(:label_address) %><br/>
        <%= f.text_area :address %>
      </div>
      <div class="actions">
        <%= f.submit t(:save) %>
      </div>
  <% end %>
</div>